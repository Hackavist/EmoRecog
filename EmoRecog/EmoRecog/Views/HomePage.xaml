<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="EmoRecog.Views.HomePage" Padding="10,35,10,10">
    <ScrollView>
        <StackLayout Spacing="10" Padding="10">
            <Button x:Name="takePhoto" Text="Take Photo" Command="{Binding TakePhotoCMD}" />
            <Button x:Name="pickPhoto" Text="Pick Photo" Command="{Binding PickPhotoCMD}" />
            <Button x:Name="takeVideo" Text="Take Video" Command="{Binding TakeVideoCMD}" />
            <Button x:Name="pickVideo" Text="Pick Video" Command="{Binding PickVideoCMD}" />
            <Button x:Name="connect" Text="Connect" Command="{Binding ConnectCMD}" />
            <Button x:Name="send" Text="Send To Server" Command="{Binding SendCMD}" />
            <Image x:Name="image" Source="{Binding imageSource}" />
        </StackLayout>
    </ScrollView>
</ContentPage>